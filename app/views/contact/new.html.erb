<div class="span8 gallery gallery_div">
  <div class="form">
  <h1>Contacter moi</h1> <hr /><br/>
  <%= form_for @message, :url => contact_path do |f| %>
      <% if @message.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@message.errors.count, "error") %></h2>
        <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label "Nom & PrÃ©nom" %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label 'Email' %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label 'Message' %>
      <%= f.text_area :content, :rows => 6 %>
    </div><br />
    <div class="field">
      <%= f.submit 'Envoyer message', :class => "btn btn-inverse" %>
    </div>
  <% end %>
  </div>
</div>