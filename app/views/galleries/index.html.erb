<div class="gallery span9">
	<h1>My first gallery</h1>
	<p>Find me in app/views/galleries/index.html.erb</p>
	<ul class="thumbnails row">
	  <% 1.upto(6) do |index| %>
		  <li class="thumbnail span3">
		    <a href="<%= image_path("#{index}_b.jpg") %>" rel="gallery_1" title="My Image">
		    	<%= image_tag "#{index}_b.jpg" %>
		    </a>
		  </li>
	  <% end %>
	</ul>
</div>